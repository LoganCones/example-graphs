library(ggplot2)

# Create example data
df <- data.frame(category = c("A", "B", "C", "D"),
                 value = c(25, 20, 35, 20))

# Create plot
ggplot(df, aes(x = "", y = value, fill = category)) +
  geom_bar(stat = "identity", width = 1) +
  coord_polar(theta = "y") +
  scale_fill_manual(values = c("#F8766D", "#00BFC4", "#FFC400", "#7CAE00")) +
  theme_void() +
  theme(legend.position = "right")
